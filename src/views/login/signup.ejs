<!DOCTYPE html>
<html>
  <head>
    <title>Contacts</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <script type="text/javascript" src="/script.js"></script>
  </head>
  <body>
    <div class="page-column">
      <div class="page-column-content">

        <h1>Sign up!</h1>

        <div class="signup-container auth-container">
          <form class="auth-form" action="/signup" method="POST">
            <label>Username</label>
            <input type="text" class="username" name="username">
            <label>Password</label>
            <input type="password" class="password" name="password">
            <label>Role</label>
            <input type="text" class="username" name="role">
            <button type="submit" class="create-user-btn auth-btn">Signup</button>
          </form>
        </div>

        <div class="go-to-login">
          <div class="login-choice">
            Already a member? Login here:
          </div>
          <div>
            <form method="POST" action="/login" class="login-route">
              <button type="submit" class="go-login-btn">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
